/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
?>
<div class="quick-cart">
      
    <div class="content"> 
	<?php $_cartQty = $this->getSummaryCount() ?>
    <?php if ($_cartQty>0): ?>
            <?php if ($_cartQty==1): ?>
            <?php echo $this->__('<a href="%s"><strong>1 item</strong></a>', $this->getUrl('checkout/cart')) ?>
            <?php else: ?>
            <?php echo $this->__('<a href="%s"><strong>%s items</strong></a>', $this->getUrl('checkout/cart'), $_cartQty) ?> 
            <?php endif ?>
           
           <strong>- <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?></strong>  | <strong><a href="<?php echo $this->getCheckoutUrl() ?>"><?php echo $this->__('Checkout') ?></a></strong>
           <?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?>
           (<strong><?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?></strong> <?php echo Mage::helper('tax')->getIncExcText(true) ?>)
           <?php endif; ?>
        <?php else: ?>
	
       <p><?php echo $this->__('0 Items - ') ?><?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?> | <strong><a href="<?php echo $this->getCheckoutUrl() ?>"><?php echo $this->__('Checkout') ?></a></strong></p>
        <?php endif ?>
		</div>
    </div><!-- [ends] .cart-sidebar // -->
